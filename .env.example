# Analytics Configuration
# Copy this file to .env.local and fill in your actual values

# Google Analytics 4 Measurement ID
# Get this from your Google Analytics dashboard
# Format: G-XXXXXXXXXX
VITE_GA_MEASUREMENT_ID=

# PostHog Configuration
# Get these from your PostHog project settings
VITE_POSTHOG_API_KEY=
VITE_POSTHOG_API_HOST=https://app.posthog.com

# Optional: Enable analytics debugging in development
VITE_ANALYTICS_DEBUG=true

# Optional: Enable cookie consent (for GDPR compliance)
VITE_COOKIE_CONSENT_REQUIRED=false
